<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
    <tr>
      <th>Album</th>
      <th>Artist</th>
    </tr>
      <tr>
        <td><%= link_to album.album_name, album_path(album) %></td>
        <td><%= link_to album.artist.artist_name, artist_path(album.artist_id) %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>
