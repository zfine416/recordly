<h1>Search Results</h1>
<% if(@artists.any?) %>
    <table>
      <thead>
        <tr>
          <th>Artists</th>
          <th colspan="3"></th>
        </tr>
      </thead>

  
      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.artist_name %></td>       
            <td><%= link_to 'Show', artist, class: "btn btn-xs btn-primary"  %></td>
            <td><%= link_to 'Edit', edit_artist_path(artist), class: "btn btn-xs btn-primary"  %></td>
            <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger"  %></td>
            <td><%= link_to 'Add To Favorites', edit_artist_path(artist), class: "btn btn-xs btn-primary"  %></td>        
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
<%end%>

<% if(@albums.any?)%>
  <table>
    <thead>
      <tr>
        <th>Albums</th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= album.album_name %></td>
          <td><%= link_to 'Show', album, class: "btn btn-xs btn-primary"  %></td>
          <td><%= link_to 'Edit', edit_album_path(album), class: "btn btn-xs btn-primary"  %></td>
          <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger"  %></td>
          <td><%= link_to 'Add To Favorites', edit_album_path(album), class: "btn btn-xs btn-primary"  %></td>        
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<%end%>

<%if (@songs.any?)%>
<table>
  <thead>
    <tr>
      <th>Songs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.song_name %></td>    
        <td><%= link_to 'Show', song, class: "btn btn-xs btn-primary"  %></td>
        <td><%= link_to 'Edit', edit_song_path(song), class: "btn btn-xs btn-primary"  %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger"  %></td>
        <td><%= link_to 'Add To Favorites', edit_song_path(song), class: "btn btn-xs btn-primary"  %></td>        
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>